<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="task"
            type="com.example.layoutapp.bean.Task" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_legend"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:src="@drawable/desk2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/iv_legend"
            app:layout_constraintStart_toStartOf="@id/iv_legend"
            app:layout_constraintTop_toBottomOf="@id/iv_legend"
            app:text="@{task.plan_date}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>